{% extends 'base.html.twig' %}

{% block body %}

{% if not form.vars.valid %}
<ul>
    
    {% for child in form.children %}
        
        {%for error in child.vars.errors%}
            <li>{{error.message}}</li>
        {%endfor%}
    {%endfor%}
</ul>
{%endif%}

{{ form_start(form, {'method': 'post', 'action': path('add_product') }) }}

                
    {{ form_rest(form) }}
    
{{ form_end(form) }}

{% endblock %}