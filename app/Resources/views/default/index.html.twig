{% extends 'base.html.twig' %}

{% block body %}
<div class="main-search-container" data-background-image="images/main-search-background-01.jpg">
	<div class="main-search-inner">

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2>Réservations logements, voitures et activités</h2>
					<h4>Explore les meilleurs plans de ...</h4>

					<div class="main-search-input">

						<div class="main-search-input-item">
							<select data-placeholder="What are you looking for?" class="chosen-select" >
								<option>Voitures</option>	
								<option>Logements</option>
								<option>Activités</option>
								
							</select>
						</div>

						<div class="main-search-input-item">
							<select data-placeholder="All Categories" class="chosen-select" >
								<option>Toutes catégories</option>	
								<option>Caractéristique 1</option>
								<option>Caractéristique 2</option>
								<option>Caractéristique 3</option>
								<option>Caractéristique 4</option>
					
							</select>
						</div>


						<button class="button" onclick="window.location.href='listings-half-screen-map-list.html'">Search</button>

					</div>
				</div>
			</div>
		</div>

	</div>
</div>


<!-- Content
================================================== -->

<!-- Fullwidth Section -->
<section class="fullwidth margin-top-65 padding-top-75 padding-bottom-70" data-background-color="#f8f8f8">

	<div class="container">
		<div class="row">

			<div class="col-md-12">
				<h3 class="headline centered margin-bottom-45">
					Logements
					<span>Découvrez nos sublimes logements</span>
				</h3>
			</div>

			<div class="col-md-12">
				<div class="simple-slick-carousel dots-nav">
				{% for product in data['lodgments'] %}
				<!-- Listing Item -->
				<div class="carousel-item">
					<a href="{{ path('get_product',{'id':product.id}) }}" class="listing-item-container">
						<div class="listing-item">
							{% if product.imgStarName != null %}
								<img src="{{ asset('images_products/'~product.imgStarName) | imagine_filter('my_thumb') }}" alt=""/> 
							{% else %}
							<img src="#" alt="">
							{% endif %}

							
							
							<div class="listing-item-content">
								
								<h3>{{ product.name }}  </h3>
								<span class="tag">{{ product.priceUnit }} euro(s)</span>
								<span>{{ product.description }}</span>
							</div>
							<span class="like-icon"></span>
						</div>
						
					</a>
				</div>
				<!-- Listing Item / End -->
				{% endfor %}

				
				
				</div>
				
			</div>

		</div>
	</div>

</section>
<!-- Fullwidth Section / End -->

<div class="container">
	<div class="row">

		<div class="col-md-12">
			<h3 class="headline centered margin-top-75">
				Voitures
				<span>Réserver <i>nos plus belles</i> voitures</span>
			</h3>
		</div>

	</div>
</div>


<!-- Categories Carousel -->
<div class="fullwidth-carousel-container margin-top-25">
	<div class="fullwidth-slick-carousel category-carousel">

		<!-- Item -->
		

		{% set index = 0 %}	
		{% for product in data['cars'] %}
		{% set index = index + 1 %}

		{% if index == 1 %}
			<div class="fw-carousel-item">
				<div class="category-box-container half">
					{% if product.imgStarName != null %}
						<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="{{ asset('images_products/'~product.imgStarName) }}" > 
					{% else %}
					<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="#">
					{% endif %}
					
						<div class="category-box-content">
							<h3>{{ product.name }}</h3>
							<span> {{ product.description }} </span>
						</div>
						<span class="category-box-btn"> {{ product.priceUnit }} </span>
					</a>
				</div>
		{% elseif index == 2 %}
			<div class="category-box-container half">
			{% if product.imgStarName != null %}
				<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="{{ asset('images_products/'~product.imgStarName) }}" > 
			{% else %}
			<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="#">
			{% endif %}
			
				<div class="category-box-content">
					<h3>{{ product.name }}</h3>
					<span> {{ product.description }} </span>
				</div>
				<span class="category-box-btn"> {{ product.priceUnit }} </span>
			</a>
			</div>
			</div>
		{% else %}
			<div class="fw-carousel-item">
			<div class="category-box-container half">
				{% if product.imgStarName != null %}
					<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="{{ asset('images_products/'~product.imgStarName) }}" > 
				{% else %}
				<a href="{{ path('get_product',{'id':product.id}) }}" class="category-box" data-background-image="#">
				{% endif %}
				
					<div class="category-box-content">
						<h3>{{ product.name }}</h3>
						<span> {{ product.description }} </span>
					</div>
					<span class="category-box-btn"> {{ product.priceUnit }} </span>
				</a>
			</div>

			
			</div>
		{% endif %}
		
		{% endfor %}

			

	</div>
</div>
<!-- Categories Carousel / End -->

<!-- Recent Blog Posts -->
<section class="fullwidth border-top margin-top-70 padding-top-75 padding-bottom-75" data-background-color="#fff">
	<div class="container">

		<div class="row">
			<div class="col-md-12">
				<h3 class="headline centered margin-bottom-45">
					Activités
				</h3>
			</div>
		</div>

		<div class="row">
			
			{% for product in data['activities'] %}
			<!-- Blog Post Item -->
			<div class="col-md-4">
				<a href="pages-blog-post.html" class="blog-compact-item-container">
					<div class="blog-compact-item">
						{% if product.imgStarName != null %}
							<img src="{{ asset('images_products/'~product.imgStarName) }}" alt=""/> 
						{% else %}
						<img src="#" alt="">
						{% endif %}
						<span class="blog-item-tag">{{ product.priceUnit }} euro(s)</span>
						<div class="blog-compact-item-content">
							
							<h3>{{ product.name }}</h3>
							<p>{{ product.description }}</p>
						</div>
					</div>
				</a>
			</div>
			<!-- Blog post Item / End -->
			{% endfor %}

			

			<div class="col-md-12 centered-content">
				<a href="{{ path('products_by_type',{'code':'ACT'}) }}" class="button border margin-top-10">Voir autres</a>
			</div>

		</div>

	</div>
</section>
<!-- Recent Blog Posts / End -->



